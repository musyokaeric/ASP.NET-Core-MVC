@{
}
@model Product

<div class="class shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Product</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3">
                @*<div asp-validation-summary="ModelOnly"></div>*@
                <div class="form-floating py-3 col-12">
                    <input asp-for="Title" disabled class="form-control" />
                    <label asp-for="Title" class="ms-2"></label>
                </div>
                <div class="form-floating py-3 col-12">
                    <textarea asp-for="Description" disabled class="form-control"></textarea>
                    <label asp-for="Description" class="ms-2"></label>
                </div>
                <div class="form-floating py-3 col-12">
                    <input asp-for="ISBN" disabled class="form-control" />
                    <label asp-for="ISBN" class="ms-2"></label>
                </div>
                <div class="form-floating py-3 col-12">
                    <input asp-for="Author" disabled class="form-control" />
                    <label asp-for="Author" class="ms-2"></label>
                </div>
                <div class="form-floating py-3 col-12">
                    <input asp-for="ListPrice" disabled class="form-control" />
                    <label asp-for="ListPrice" class="ms-2"></label>
                </div>
                <div class="form-floating py-3 col-12">
                    <input asp-for="Price" disabled class="form-control" />
                    <label asp-for="Price" class="ms-2"></label>
                </div>
                <div class="form-floating py-3 col-12">
                    <input asp-for="Price50" disabled class="form-control" />
                    <label asp-for="Price50" class="ms-2"></label>
                </div>
                <div class="form-floating py-3 col-12">
                    <input asp-for="Price100" disabled class="form-control" />
                    <label asp-for="Price100" class="ms-2"></label>
                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border form-control">Back to List </a>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}